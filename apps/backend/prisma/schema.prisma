// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           String        @id @unique
  displayName  String
  firebaseId   String        @unique
  notes        note[]
  noteComments noteComment[]
}

model note {
  id          String        @id @unique
  author      user          @relation(fields: [authorId], references: [id])
  authorId    String
  title       String
  description String
  color       String
  createdAt   DateTime
  updatedAt   DateTime?
  noteComment noteComment[]
}

model noteComment {
  id        String   @id @unique
  author    user     @relation(fields: [authorId], references: [id])
  authorId  String
  note      note     @relation(fields: [noteId], references: [id])
  noteId    String
  message   String
  createdAt DateTime
}
