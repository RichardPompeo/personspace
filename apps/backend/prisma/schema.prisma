// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String @id @unique
  displayName String
  firebaseId  String @unique
  notes       note[]
}

model note {
  id          String    @id @unique
  author      user      @relation(fields: [authorId], references: [id])
  authorId    String
  title       String
  description String
  createdAt   DateTime
  updatedAt   DateTime?
}
